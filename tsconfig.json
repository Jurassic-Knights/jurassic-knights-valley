{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "lib": [
            "ES2022",
            "DOM",
            "DOM.Iterable"
        ],
        "allowJs": true,
        "checkJs": false,
        "noEmit": true,
        "strict": false,
        "strictNullChecks": false,
        "noImplicitAny": false,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "src/*"
            ],
            "@core/*": [
                "src/core/*"
            ],
            "@systems/*": [
                "src/systems/*"
            ],
            "@entities/*": [
                "src/entities/*"
            ],
            "@vfx/*": [
                "src/vfx/*"
            ],
            "@ui/*": [
                "src/ui/*"
            ],
            "@types/*": [
                "src/types/*"
            ],
            "@config/*": [
                "src/config/*"
            ],
            "@data/*": [
                "src/data/*"
            ],
            "@audio/*": [
                "src/audio/*"
            ],
            "@dashboard/*": [
                "tools/dashboard/src/*"
            ]
        }
    },
    "include": [
        "src/**/*",
        "src/types/**/*.d.ts",
        "tools/dashboard/src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}